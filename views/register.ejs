<%- include("partials/header.ejs") -%>

<div id="register-card" class="card">
    <div class="card-body">
        <h5 class="card-title">Sign up</h5><br />

        <% if (typeof u != null && u == false) { %>
            <div class="card border-danger mb-3" style="max-width: 25rem;">
                <div class="card-body text-danger">
                    <p class="card-text">The usernmae already registered.</p>
                </div>
            </div>
        <% } %>

        <form action="/register" method="POST">
            <input type="text" class="form-control" name="fname" style="display: inline; max-width: 10rem;" placeholder="first name" required>&nbsp;&ensp;
            <input type="text" class="form-control" name="lname" style="display: inline; max-width: 10rem;" placeholder="last name" required><br /><br />
            <input type="text" class="form-control" name="username" placeholder="username" style="max-width: 21rem;" required><br />
          <% if(typeof p != null && p == false) { %>
                <p style="color: red">password length must be minimum 6</p>
            <% } %>            <input type="password" class="form-control" name="password" placeholder="password" minlength="3" required><br />
  
            <button type="submit" class="btn btn-primary btn-none">Next</button>&nbsp;&nbsp;&nbsp;&nbsp;

            <a href="/register">Don't have account?</a>
        </form>
    </div>
</div>

<%- include("partials/footer.ejs") -%>